---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  imagePath: string;
  slug: string;
  altText: string;
  title: string;
  description: string;
  publishDate: string;
  published?: boolean;
}

const { imagePath, slug, altText, title, description, publishDate } =
  Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpg,png,webp}"
);
if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "/src/assets/*.{jpg,png,webp}"`
  );
