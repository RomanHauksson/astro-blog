<a
  href={`/posts/${slug}/`}
  class="flex flex-row flex-wrap gap-4 hover:bg-slate-800 rounded-lg p-4 transition-all duration-100 border border-slate-800"
>
  <div class="basis-[10rem] grow">
    <Image
      src={images[imagePath]()}
