---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  description: string;
  showTitle?: boolean;
  image?: string;
  showSidebar?: boolean;
}
const {
  title,
  description,
  showTitle = true,
  image = "",
  showSidebar = false,
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>

  <body class="flex flex-col gap-6 bg-slate-900 text-white">
    <Header />
    <main class="flex flex-col gap-6 max-w-[50rem] w-full m-auto px-6">
      {showTitle && <h1 class="font-bold text-5xl">{title}</h1>}
      {
        showSidebar ? (
          <div class="flex flex-row gap-4">
            <slot />
          </div>
        ) : (
          <slot />
        )
      }
    </main>
    <Footer />
  </body>
</html>
