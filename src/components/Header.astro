---
import HeaderLink from "./HeaderLink.astro";
import ActionButton from "./ActionButton.astro";
// import ThemeToggle from "./ThemeToggle.tsx";
import { SITE_TITLE } from "../consts";
---

<header class="sticky top-0 z-10">
  <nav
    class="flex flex-row items-center justify-between py-3 px-6 bg-gradient-to-b from-white/90 to-white/10 dark:from-slate-900/90 dark:to-slate-900/10 backdrop-blur"
  >
    <h1 class="font-bold text-lg text-black dark:text-white">
      <a href="/">{SITE_TITLE}</a>
    </h1>
    <div class="flex flex-row gap-4">
      <!-- <ThemeToggle client:load /> -->
      <HeaderLink href="/projects">projects</HeaderLink>
      <HeaderLink href="/resume">resume</HeaderLink>
      <ActionButton href="/contact">contact</ActionButton>
    </div>
  </nav>
</header>
