---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  imagePath: string;
  slug: string;
  altText: string;
  title: string;
  description: string;
}

const { imagePath, slug, altText, title, description } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpg,png,webp}"
);
if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "/src/assets/*.{jpg,png,webp}"`
  );
---

<li
  class="grow-0 shrink basis-60 relative h-auto rounded-xl overflow-hidden hover:rotate-3 active:rotate-0 active:scale-90 duration-75 shadow-lg"
>
  <a href={`/projects/${slug}/`}>
    <Image
      src={images[imagePath]()}
      alt={altText}
      quality="mid"
      loading="eager"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-black/80"></div>
    <div class="absolute top-0 w-full text-white p-2">
      <h3 class="text-xl font-bold text-shadow">{title}</h3>
      <p class="text-base leading-6 text-shadow">
        {description}
      </p>
    </div>
  </a>
</li>
