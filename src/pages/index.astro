---
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Page from "../layouts/Page.astro";
---

<Page title={SITE_TITLE} description={SITE_DESCRIPTION} showTitle={false}>
  <section>
    <div class="flex flex-row gap-6 items-center">
      <img src="headshot.jpg" class="w-48 rounded-full" />
      <div class="flex flex-col">
        <h1 class="font-bold text-3xl">Hi, my name's Roman.</h1>
        <p>I'm trying to help make society's future go well.</p>
      </div>
    </div>
  </section>
</Page>
