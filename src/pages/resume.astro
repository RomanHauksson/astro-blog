  {
    name: "education",
    icon: "material-symbols:school-outline",
    entries: [
      {
        name: "University of Texas at Dallas",
        description: ["B.S. in Computer Science, National Merit Scholar"],
        startMonth: "Aug 2021",
        endMonth: "Dec 2025 (Expected)",
      },
    ],
  },
  {
    name: "work experience",
    icon: "material-symbols:work-outline",
    entries: [
      {
        name: "Capital One: Software Engineering Intern",
        location: "McLean, Virginia",
        startMonth: "Jun 2023",
        endMonth: "Aug 2023",
