  {
    name: "research",
    icon: "material-symbols:search",
    entries: [
      {
        name: "ACM UTD Research Program: Director",
        link: "https://acmutd.co/research",
        startMonth: "May 2022",
        endMonth: "Dec 2022",
        description: [
